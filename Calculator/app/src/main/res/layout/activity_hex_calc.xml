<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.neumont.dkramer.calculator.CalcActivity">

    <TextView
        android:id="@+id/calcInputView"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/calcNumView"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="@string/defaultCalcDisplayLabel"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcInputView" />

    <TableLayout
        android:layout_width="367dp"
        android:layout_height="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/calcNumView"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="117dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buttonBinaryMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="binaryModeButtonClicked"
                android:text="Binary"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="121dp" />

            <Button
                android:id="@+id/buttonHexMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hexModeButtonClicked"
                android:text="Hex" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="370dp"
        android:layout_height="337dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="4"
        android:paddingBottom="2dp"
        android:paddingEnd="2dp"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:rowCount="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_dark"
            android:onClick="clearCalcButtonClicked"
            android:text="CLEAR"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="รท"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="8"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="ร"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="5"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="5"
            android:background="@android:color/holo_blue_dark"
            android:onClick="equalsCalcButtonClicked"
            android:text="="
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="5"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="6"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="9"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="7"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonA"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="A"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonD"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="D"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonB"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="B"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonE"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="E"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="C"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonF"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="F"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
