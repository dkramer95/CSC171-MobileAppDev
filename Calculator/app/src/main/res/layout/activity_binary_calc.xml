<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/binaryCalc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.neumont.dkramer.calculator.CalcActivity">

    <TextView
        android:id="@+id/calcInputView"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/calcNumView"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="@string/defaultCalcDisplayLabel"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcInputView" />

    <TableLayout
        android:layout_width="367dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcNumView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonBinaryMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="binaryModeButtonClicked"
                android:text="Binary"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="121dp" />

            <Button
                android:id="@+id/buttonHexMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="hexModeButtonClicked"
                android:text="Hex" />

            <Button
                android:id="@+id/buttonDecimalMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="decimalModeButtonClicked"
                android:text="Decimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="4"
        android:paddingBottom="2dp"
        android:paddingEnd="2dp"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:onClick="clearCalcButtonClicked"
            android:text="CLEAR"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_light"
            android:onClick="calcButtonClicked"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@android:color/holo_blue_dark"
            android:onClick="equalsCalcButtonClicked"
            android:text="="
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="รท"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="ร"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonPower"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="^"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonModulus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@android:color/holo_blue_dark"
            android:onClick="calcButtonClicked"
            android:text="%"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>

