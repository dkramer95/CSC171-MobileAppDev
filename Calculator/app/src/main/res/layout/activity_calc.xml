<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="edu.neumont.dkramer.calculator.CalcActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/calcTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorGrayText"/>

        <TextView
            android:id="@+id/calcRunningTotalView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/calcnumview"
            android:onClick="saveResultToCSV"
            android:padding="5dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/normalButtonBG"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

            <RadioButton
                android:id="@+id/radioButtonHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="hexModeButtonClicked"
                android:text="Hexadecimal"
                android:textColor="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radioButtonBinary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="binaryModeButtonClicked"
                android:text="Binary"
                android:textColor="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radioButtonDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:onClick="decimalModeButtonClicked"
                android:text="Decimal"
                android:textColor="@color/colorPrimary"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:weightSum="4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="clearCalcButtonClicked"
                android:text="CLEAR"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/buttonMod"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="%"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/buttonExponent"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="^"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="รท"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="7"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="8"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="9"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="ร"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="4"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="5"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="6"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="-"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="1"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="2"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="3"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="+"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="."
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="0"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/calcbutton"
                android:minHeight="60dp"
                android:onClick="calcButtonClicked"
                android:text="+/-"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/equalsbutton"
                android:minHeight="60dp"
                android:onClick="equalsCalcButtonClicked"
                android:text="="
                android:textSize="34sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
